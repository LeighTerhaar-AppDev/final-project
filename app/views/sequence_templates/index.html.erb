<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All sequences
    </h1>

    <a href="/sequences/new" class="btn btn-block btn-outline-secondary">
      Add a new sequence
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Yogaflow
        </th>

        <th>
          Pose
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @sequences.each do |sequence| %>
      <tr>
        <td>
          <%= sequence.id %>
        </td>

        <td>
          <%= sequence.yogaflow_id %>
        </td>

        <td>
          <%= sequence.pose_id %>
        </td>

        <td>
          <%= time_ago_in_words(sequence.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(sequence.updated_at) %> ago
        </td>

        <td>
          <a href="/sequences/<%= sequence.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
