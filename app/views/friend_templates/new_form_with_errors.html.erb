<!-- Validation failure messages -->
<% if @friend.present? %>
  <% if @friend.errors.any? %>
    <% @friend.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new friend
</h1>


<hr>

<form action="/create_friend" method="post">

  <div class="form-group">

    <input type="hidden" name="follower_id" class="form-control" value="<%= @friend.follower_id %>">
  </div>

  <div class="form-group">

    <input type="hidden" id="leader_id" name="leader_id" class="form-control" value="<%= @friend.leader_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create friend
  </button>
</form>

<hr>

<a href="/friends">
  Go back
</a>
