<% if @favorite.errors.any? %>
  <% @favorite.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit favorite #<%= @favorite.id %>
</h1>

<hr>

<form action="/update_favorite/<%= @favorite.id %>" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @favorite.user_id %>">
  </div>

  <div class="form-group">
    <label for="yogaflow_id">
      Yogaflow
    </label>

    <input type="text" id="yogaflow_id" name="yogaflow_id" class="form-control" value="<%= @favorite.yogaflow_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update favorite
  </button>
</form>

<hr>

<a href="/favorites">
  Go back
</a>
